<div class="container" style="margin-top: 25px;">

  <% if notice %>
    <p id="notice" class="alert alert-warn">
      <%= notice %>
    </p>
  <% end %>

  <%= form_tag(lunches_upload_path, multipart: true, 'data-toggle': 'validator') do %>
    <div id="notice" class="alert alert-info">
      <div>
        <h4>社員名簿を<a href="https://docs.google.com/spreadsheets/d/1yz0sP5PwLuHmiecmAjVm9Vasx8dr8LVsdnu1NGh2-0U/edit?usp=drive_web&ouid=117913453659345356365">Google Driveから</a>CSVファイルとしてダウンロードして、こちらにアップロードしてください。</h4>
      </div>
    </div>
    <div class="panel panel-default" style="margin-top: 10px;">
      <div class="panel-body">

        <div class="form-group">
          <div class="field row">
            <label class="col-sm-2">グループ人数を設定してください</label>
            <div>
              <input id="group_size" class="form-input form-control" placeholder="6" required="required" data-validate="true" data-required-error="*必須入力です" type="number" name="group_size" />
              <div class="help-block with-errors"></div>
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="field row">
            <div class="col-sm-9">
              <div class="form-group">
                <div class="input-group">
                  <input type="text" class="form-control" id="filename" readonly="">
                  <label class="input-group-btn">
                        <span class="btn btn-sm btn-primary">
                            ファイルを選択 <i class="fa fa-upload"></i><input type="file" id="file-input" onchange="handleFiles(this.files)" name="file" accept="text/plain,text/tab-separated-values,text/csv" style="display:none" data-filesize="20" data-filetype="" required="required" data-required-error="対象のファイルを選択してください">
                        </span>
                  </label>
                </div>
                <div class="help-block with-errors"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="">
      <%= submit_tag 'upload', id: 'upload-btn', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
